# Server
SERVER_PORT=8080

# MySQL（MYSQL_ROOT_PASSWORD 与 MYSQL_DSN 中的密码须一致；改密码后需删数据卷重建）
MYSQL_ROOT_PASSWORD=root
MYSQL_DSN=root:root@tcp(mysql:3306)/community?charset=utf8mb4&parseTime=True

# JWT (C端与B端隔离，分别使用不同密钥)
JWT_USER_SECRET=user-jwt-secret-change-in-prod
JWT_ADMIN_SECRET=admin-jwt-secret-change-in-prod
JWT_EXPIRE_HOURS=72

# 上传（本地存储）
UPLOAD_DIR=/data/upload
UPLOAD_URL_PREFIX=/uploads

# Kafka
KAFKA_BROKERS=kafka:9092
KAFKA_TOPIC_NOTIFICATIONS=community.notifications

# 日志目录（默认 log，日志文件为 <LOG_DIR>/app.log）
LOG_DIR=log
